generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// 1. Объявляем перечисление ролей
enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  // 2. Добавляем поле роли с типом Role и значением по умолчанию USER
  role      Role     @default(USER)
  
  // Если у тебя есть связь с проектами, оставь её
  projects  Project[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Пример модели проекта (если она у тебя такая)
model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}